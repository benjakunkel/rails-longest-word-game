<div class="container" id="home">

<h1 class="text-center titulo">New Game</h1>

<h4 class="text-center mt-4">
    <% @letters.each do |letra| %>
     <div class="letras d-inline" > <%= letra %> </div>
    <% end %> 
</h4>

<form action="/score" method="POST">
  <div class="form-group text-center">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <p class="mt-4">  💎💎 👆🏻 Write word with (10 points per letter)👆🏻 💎💎  </p>
    <input id="input" type="text" class="form-control m-auto" name="palabra" placeholder="Enter word... ✍🏼">
    <input type="hidden" name="letters" value=<%= @letters.join("") %> >
    <input class="btn btn-dark mt-3" type="submit" value="Jugar!">
  </div> 
</form>

